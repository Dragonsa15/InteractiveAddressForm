<%- include ('./partials/header') %>

<link rel="stylesheet" href="stylesheets/map.css">
<div class="container my-5">
    <form action="/" class="needs-validation" method="POST" novalidate>
        <legend>Address Form</legend>

        <a class="btn btn-primary my-2 location"  onclick="getLocation('<%= accessToken1 %>');">Use my current location <i class="fa fa-map-marker" aria-hidden="true"></i></a>
        <input type="hidden" name="address[longitude]" id="longitude" value="..." />
        <input type="hidden" name="address[latitude]"  id="latitude" value="..." />
        <p>Double click on the map to choose your location</p>
        <div id="mapid"></div>
        <span class="location"></span>
        <div class="row">
        <div class="col-md-6">
            <label for="Address">Street Address</label>
            <input type="text" onchange="autocompleteonaddress('<%= accessToken2 %>','<%= appId %>')" name = "address[addr1]" class="form-control" id="address" required />
        </div>
        <div class="col-md-6">
            <label for="Address">City</label>
            <input type="text" name = "address[city]" class="form-control" id="city" required />
        </div>
        <div class="col-md-6">
            <label for="Address">State</label>
            <input type="text" name = "address[state]" class="form-control" id="state" required />
        </div>

        <div class="col-md-6">
            <label for="Address">Country</label>
            <input type="text" name = "address[country]" class="form-control" id="country" required />
        </div>
        <div class="col-md-6">
            <label for="Address">Postal Code</label>
            <input type="text" name = "address[postalCode]" onchange="autocompleteonfield('accessToken = <%= accessToken2 %>')" class="form-control" id="postalCode" required/>
        </div>
        </div>
        
        <input type="submit" class="btn btn-primary mt-2">
        </fieldset>
        
    </form>
    <a href="/" class="mt-5 pt-5">Go back</a>
        
    <script src="scripts/Location.js"></script>
</div>


<%- include ('./partials/footer') %>